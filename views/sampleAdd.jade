doctype html
html
  head
    meta(charset='utf-8')
  body
    h1 Server Side JS
    ul
      each topic in topics
        li
          a(href='/topic/'+topic)= topic
    article
      h2= title
      = description
    div
      form(action='/topic' method='post')
        p
          input(type='text' name='title')
        p
          textarea(name='description')
        p
          input(type='submit')
